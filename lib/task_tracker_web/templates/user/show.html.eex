<h1>User</h1>

<ul class="list-group">

  <li class="list-group-item">
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li class="list-group-item">
    <strong>Email:</strong>
    <%= @user.email %>
  </li>

  <li class="list-group-item">
    <strong>Admin:</strong>
    <%= @user.admin %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.user_path(@conn, :edit, @user), class: "btn btn-info" %></span>
